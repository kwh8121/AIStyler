# === Port Configuration (Change these when port numbers are assigned) ===
FRONTEND_PORT=80
BACKEND_PORT=8080
DB_PORT=5432

# === Database Configuration ===
# RDS 등 실제 경로 값으로 수정필요
POSTGRES_USER=styler_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_DB=styler_db
POSTGRES_SSLMODE=disable
DATABASE_URL=postgresql+asyncpg://styler_user:your_secure_password_here@db:5432/styler_db

# === JWT Authentication ===
JWT_SECRET_KEY=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# === CORS Configuration ===
CORS_ORIGINS=["http://localhost:3000","http://localhost:80","http://localhost"]

# === DeepL API Configuration ===
DEEPL_API_KEY=your_deepl_api_key_here
DEEPL_API_FREE=true  # true for free API, false for Pro API

# === OpenAI API Configuration ===
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_API_SEO_KEY=sk-your_openai_seo_api_key_here
USE_OPENAI=true
OPENAI_DUMP_PROMPTS=true
OPENAI_PROMPT_DUMP_DIR=logs/openai_prompts
OPENAI_DETECT_TO_CORRECT_DELAY_SEC=2

OPENAI_MODEL=gpt-5-chat-latest
OPENAI_DETECT_MODEL=gpt-5-chat-latest
OPENAI_CORRECT_MODEL=gpt-5-chat-latest

OPENAI_INCLUDE_REASONING=false # reasoning 모델을 사용하는경우 true

# (low|medium|high). Ignored if model doesn't support it.
OPENAI_REASONING_EFFORT=low
OPENAI_TEXT_VERBOSITY=

OPENAI_DETECT_TEMPERATURE=
OPENAI_CORRECT_TEMPERATURE=

OPENAI_DETECT_TOP_P=
OPENAI_CORRECT_TOP_P=

# === vLLM Server Configuration ===
VLLM_URL=x
VLLM_MODEL_NAME=x

# === AI Server Configuration ===
AI_SERVER_URL=http://localhost:8080
USE_AI_SERVER=false

# === Application Configuration ===
ENVIRONMENT=production
APP_HOST=0.0.0.0
APP_PORT=8080
LOG_LEVEL=INFO

# === Seed style guides on startup ===
# 첫 부팅 시 스타일 가이드 JSON을 가져옵니다 (테이블이 비어 있을 경우)
# 위반 내역을 데이터베이스에서 찾아와서 저장하기 위함
STYLE_GUIDES_FILE=/app/seed/style_guide.json
